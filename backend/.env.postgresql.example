# ====================================
# HelloAgents Platform - PostgreSQL Configuration
# ====================================
# Description: Environment variables for PostgreSQL production setup
# Copy this file to .env and update the values

# ====================================
# Database Configuration
# ====================================

# PostgreSQL Connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://helloagents_user:your_secure_password_here@localhost:5432/helloagents_prod

# Or set individual components (optional)
# PG_HOST=localhost
# PG_PORT=5432
# PG_DB=helloagents_prod
# PG_USER=helloagents_user
# PG_PASSWORD=your_secure_password_here

# ====================================
# Application Configuration
# ====================================

# Environment
DEBUG=false
LOG_SQL_QUERIES=false

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ====================================
# Monitoring and Logging
# ====================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# ====================================
# Backup Configuration
# ====================================

# Backup Directory
BACKUP_DIR=/var/backups/postgresql

# Backup Retention (days)
RETENTION_DAYS=30

# S3 Backup (optional)
ENABLE_S3_SYNC=false
S3_BUCKET=s3://your-backup-bucket/helloagents
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# ====================================
# Notification Configuration (optional)
# ====================================

# Slack Webhook (for backup notifications)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Notifications
EMAIL_TO=admin@helloagents.com

# ====================================
# Performance Tuning
# ====================================

# Connection Pool Configuration (already set in database.py)
# pool_size = 20
# max_overflow = 40
# pool_recycle = 3600
# pool_pre_ping = True

# ====================================
# Security Notes
# ====================================
# 1. NEVER commit this file with real credentials
# 2. Use strong passwords (16+ characters, mixed case, numbers, symbols)
# 3. Rotate passwords regularly (every 90 days)
# 4. Use different passwords for dev/staging/production
# 5. Enable SSL for database connections in production
# 6. Restrict database access by IP (pg_hba.conf)
